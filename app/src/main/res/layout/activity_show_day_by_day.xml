<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/main_screen_back4"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ShowDayByDay">

    <TextView
        android:id="@+id/showDateTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="12sp" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:elevation="5dp">
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/showCountryIV"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:scaleType="fitXY" />

            <TextView
                android:textSize="19sp"
                android:gravity="center"
                android:id="@+id/showCountryTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <View
        android:layout_marginBottom="5dp"
        android:background="@drawable/main_screen_back4"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="সর্বোমোট অবস্থা:"
        android:padding="10dp"
        android:background="@drawable/main_screen_back6"
        android:textColor="#330101"
        android:textStyle="bold" />


    <View
        android:layout_marginTop="5dp"
        android:background="@drawable/main_screen_back4"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:elevation="5dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="2">
            <TableRow
                android:background="#A3ECECEC"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:text="Cases:"
                    android:padding="10dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/showCasesTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_screen_back3"
                    android:gravity="start"
                    android:padding="10dp"
                    android:textColor="#05352F"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow android:layout_marginTop="2dp"
                android:background="#FAB0B0">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:text="Deaths:"
                    android:padding="10dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/showDeathsTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_screen_back3"
                    android:gravity="start"
                    android:padding="10dp"
                    android:textColor="#05352F"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:background="#A3ECECEC"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:text="Recovered:"
                    android:padding="10dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/showRecorveredTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_screen_back3"
                    android:gravity="start"
                    android:padding="10dp"
                    android:textColor="#05352F"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow android:layout_marginTop="2dp"
                android:background="#A3FFFFFF">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:text="Active:"
                    android:padding="10dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/showActiveTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_screen_back3"
                    android:gravity="start"
                    android:padding="10dp"
                    android:textColor="#05352F"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow
                android:background="#A3ECECEC"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:text="Critical:"
                    android:padding="10dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/showCricticalTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_screen_back3"
                    android:gravity="start"
                    android:padding="10dp"
                    android:textColor="#05352F"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow android:layout_marginTop="2dp"
                android:background="#A3FFFFFF">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:text="Cases Per One Million:"
                    android:padding="10dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/showCasesPOMTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_screen_back3"
                    android:gravity="start"
                    android:padding="10dp"
                    android:textColor="#05352F"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow
                android:background="#A3ECECEC"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:text="Deaths Per One Million:"
                    android:padding="10dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/showDeathsPOMTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_screen_back3"
                    android:gravity="start"
                    android:padding="10dp"
                    android:textColor="#05352F"
                    android:textStyle="bold" />
            </TableRow>

        </TableLayout>
    </androidx.cardview.widget.CardView>


    <View
        android:layout_marginBottom="5dp"
        android:background="@drawable/main_screen_back4"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="বর্তমান অবস্থা:"
        android:padding="10dp"
        android:background="@drawable/main_screen_back6"
        android:textColor="#330101"
        android:textStyle="bold" />


    <View
        android:layout_marginTop="5dp"
        android:background="@drawable/main_screen_back4"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="5dp"
        android:padding="5dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="2">
            <TableRow
                android:background="#A3ECECEC"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:text="Cases:"
                    android:padding="10dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/showBCasesTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_screen_back3"
                    android:gravity="start"
                    android:padding="10dp"
                    android:textColor="#05352F"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow android:layout_marginTop="2dp"
                android:background="#FAB0B0">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:text="Deaths:                            "
                    android:padding="10dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/showBDeathsTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_screen_back3"
                    android:gravity="start"
                    android:padding="10dp"
                    android:textColor="#05352F"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>