<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:padding="3dp"
    app:cardCornerRadius="5dp"
    android:id="@+id/conditionCV"
    android:elevation="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textColor="#020727"
            android:padding="5dp"
            android:textSize="20sp"
            android:id="@+id/dayDateTV"
            android:background="#11303F9F"
            android:text="Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginRight="2dp"
                android:text="Cases"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/dayCasesTV"
                android:gravity="center"
                android:textSize="20sp"
                android:padding="5dp"
                android:background="#C6386F0A"
                android:textColor="#FFF"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginRight="2dp"
                android:text="Recorvered"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:id="@+id/dayRecorveredTV"
                android:textSize="20sp"
                android:padding="5dp"
                android:background="#C600796B"
                android:textColor="#FFF"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Deads"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:textSize="20sp"
                android:id="@+id/dayDeadsTV"
                android:padding="5dp"
                android:background="#CDD32F2F"
                android:textColor="#FFF"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>