<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ShowAllCountry">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginRight="2dp"
            android:background="@drawable/main_screen_back3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ssTotalCasesTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="#59438D"
                android:textSize="16sp" />
            <TextView
                android:textColor="#7E7E7E"
                android:gravity="center"
                android:text="মোট আক্রান্ত"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="2dp"
            android:background="@drawable/main_screen_back3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ssTotalDeadsTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="#EE6B6B"
                android:textSize="16sp" />
            <TextView
                android:textColor="#7E7E7E"
                android:gravity="center"
                android:text="মোট মৃত্যু"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <LinearLayout
            android:background="@drawable/main_screen_back3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ssTotalRecorveredTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="#52A167"
                android:textSize="16sp" />
            <TextView
                android:textColor="#7E7E7E"
                android:gravity="center"
                android:text="মোট সুস্থ"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:textColor="#fff"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="#572222"
                    android:text="Country Name"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_marginTop="1dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text="Total Recovered"
                    android:background="@drawable/main_screen_back8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/main_screen_back9"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Total Causes"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                <TextView
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text="Total Deads"
                    android:background="@drawable/main_screen_back11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/main_screen_back10"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="New Causes"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:padding="5dp"
                        android:gravity="center"
                        android:text="New Deads"
                        android:background="@drawable/main_screen_back7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recyclerViewshowAllCountry"
        android:layout_height="match_parent"/>

</LinearLayout>