<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.mehedi.koronaviruscausesTusu.BangladeshDayByDayActivity">

    <include layout="@layout/toolbar"/>
    <TextView
        android:textColor="@color/primary_text"
        android:gravity="center"
        android:textSize="16sp"
        android:text="Bangladesh Corona virus Cases Day by Day Information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_margin="3dp"
        android:padding="3dp"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="20dp"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:id="@+id/dayDateTV"
                android:background="#C2185B"
                android:text="Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginRight="2dp"
                    android:text="Cases"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/dayCasesTV"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:background="#689F38"
                    android:textColor="#FFF"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginRight="2dp"
                    android:text="Recorvered"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:id="@+id/dayRecorveredTV"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:background="#00796B"
                    android:textColor="#FFF"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Deads"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:id="@+id/dayDeadsTV"
                    android:padding="5dp"
                    android:background="#D32F2F"
                    android:textColor="#FFF"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dayByDayRecyclerView"/>


</LinearLayout>
